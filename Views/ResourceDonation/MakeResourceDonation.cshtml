@model ResourceDonationViewModel
@{
    ViewData["Title"] = "Donate Resources";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0"><i class="fas fa-box-open me-2"></i>Donate Resources</h2>
                </div>
                <div class="card-body">
                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle me-2"></i>@ViewBag.Success
                        </div>
                    }

                    <form method="post" asp-action="MakeResourceDonation">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="itemId" class="form-label">Select Item to Donate *</label>
                                    <select class="form-select" id="itemId" name="itemId" required>
                                        <option value="">Choose an item...</option>
                                        @if (ViewBag.AvailableItems != null)
                                        {
                                            foreach (var item in ViewBag.AvailableItems)
                                            {
                                                <option value="@item.ItemID">@item.ItemName (@item.Category)</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="quantity" class="form-label">Quantity *</label>
                                    <input type="number" class="form-control" id="quantity" name="quantity" min="1" required>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="projectId" class="form-label">Specific Project (Optional)</label>
                            <select class="form-select" id="projectId" name="projectId">
                                <option value="">General Donation</option>
                                @if (ViewBag.Project != null)
                                {
                                    <option value="@ViewBag.Project.ProjectID" selected>@ViewBag.Project.ProjectName</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="deliveryMethod" class="form-label">Delivery Method *</label>
                            <select class="form-select" id="deliveryMethod" name="deliveryMethod" required>
                                <option value="">Select delivery method...</option>
                                <option value="Drop-off">Drop-off at Center</option>
                                <option value="Pickup">Schedule Pickup</option>
                                <option value="Shipping">Shipping</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="notes" class="form-label">Additional Notes</label>
                            <textarea class="form-control" id="notes" name="notes" rows="3" placeholder="Any special instructions or notes about your donation..."></textarea>
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="isAnonymous" name="isAnonymous" value="true">
                            <label class="form-check-label" for="isAnonymous">Make this donation anonymous</label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-paper-plane me-2"></i>Submit Donation
                            </button>
                        </div>
                    </form>

                    @if (ViewBag.DonationCenters != null)
                    {
                        <div class="mt-4">
                            <div class="alert alert-info">
                                <h6><i class="fas fa-info-circle me-2"></i>Need to find a donation center?</h6>
                                <p class="mb-0">
                                    <a asp-action="DonationCenters" class="alert-link">View all our donation centers and their accepted items</a>
                                </p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>