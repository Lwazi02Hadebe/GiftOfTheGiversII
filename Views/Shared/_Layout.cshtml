                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-light btn-sm ms-2 @(ViewContext.RouteData.Values["Action"]?.ToString() == "Register" ? "active" : "")"
                                   href="@Url.Action("Register", "Auth")">
                                    <i class="fas fa-user-plus me-1"></i>Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

