                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Login" ? "active" : "")"
                                   href="@Url.Action("Login", "Auth")">
                                    <i class="fas fa-sign-in-alt me-1"></i>Login
