                                        </li>
                                        <li>
                                            <a class="dropdown-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Donations" ? "active" : "")"
                                               href="@Url.Action("Donations", "Admin")">
                                                <i class="fas fa-donate me-2"></i>Donations
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Projects" ? "active" : "")"
                                               href="@Url.Action("Projects", "Admin")">
                                                <i class="fas fa-project-diagram me-2"></i>Projects
