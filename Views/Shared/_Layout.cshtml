                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link">
                                    <i class="fas fa-user-circle me-1"></i>Welcome, @User.Identity.Name!
                                </span>
                            </li>
                            <li class="nav-item">
                                <form method="post" action="@Url.Action("Logout", "Auth")" class="d-inline">
                                    @Html.AntiForgeryToken()
