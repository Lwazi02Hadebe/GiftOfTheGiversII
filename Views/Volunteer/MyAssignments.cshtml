@model List<GiftOfTheGiversII.Models.VolunteerAssignment>
@{
    ViewData["Title"] = "My Volunteer Assignments";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0"><i class="fas fa-clipboard-list me-2"></i>My Volunteer Assignments</h2>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Task</th>
                                        <th>Project</th>
                                        <th>Location</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                        <th>Hours</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var assignment in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@assignment.Task?.Title</strong>
                                                <br>
                                                <small class="text-muted">@assignment.Task?.TaskType</small>
                                            </td>
                                            <td>@assignment.Task?.Project?.ProjectName</td>
                                            <td>@assignment.Task?.Location</td>
                                            <td>@assignment.Task?.StartDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <span class="badge @GetStatusBadgeClass(assignment.Status)">
                                                    @assignment.Status
                                                </span>
                                            </td>
                                            <td>@(assignment.HoursCompleted?.ToString("0.0") ?? "-")</td>
                                            <td>
                                                @if (assignment.Status == "Assigned")
                                                {
                                                    <button type="button" class="btn btn-success btn-sm"
                                                            data-bs-toggle="modal" data-bs-target="#completeModal-@assignment.AssignmentID">
                                                        Complete
                                                    </button>
                                                }
                                            </td>
                                        </tr>

                                        <!-- Complete Assignment Modal -->
                                        @if (assignment.Status == "Assigned")
                                        {
                                            <div class="modal fade" id="completeModal-@assignment.AssignmentID" tabindex="-1">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Complete Assignment</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <form method="post" asp-action="UpdateAssignmentStatus">
                                                            <div class="modal-body">
                                                                <input type="hidden" name="assignmentId" value="@assignment.AssignmentID" />
                                                                <input type="hidden" name="status" value="Completed" />

                                                                <div class="mb-3">
                                                                    <label class="form-label">Hours Completed</label>
                                                                    <input type="number" step="0.5" min="0.5" max="24" name="hoursCompleted" class="form-control" required>
                                                                </div>

                                                                <div class="mb-3">
                                                                    <label class="form-label">Feedback (Optional)</label>
                                                                    <textarea name="feedback" class="form-control" rows="3" placeholder="Share your experience..."></textarea>
                                                                </div>

                                                                <div class="mb-3">
                                                                    <label class="form-label">Rating (Optional)</label>
                                                                    <select name="rating" class="form-select">
                                                                        <option value="">Select rating</option>
                                                                        <option value="5">⭐⭐⭐⭐⭐ Excellent</option>
                                                                        <option value="4">⭐⭐⭐⭐ Very Good</option>
                                                                        <option value="3">⭐⭐⭐ Good</option>
                                                                        <option value="2">⭐⭐ Fair</option>
                                                                        <option value="1">⭐ Poor</option>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                <button type="submit" class="btn btn-success">Mark Complete</button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-clipboard-list fa-3x text-muted mb-3"></i>
                            <h4>No Assignments Yet</h4>
                            <p class="text-muted">You haven't been assigned to any volunteer tasks yet.</p>
                            <a asp-action="AvailableTasks" class="btn btn-primary">
                                <i class="fas fa-tasks me-2"></i>Browse Available Tasks
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Completed" => "bg-success",
            "Assigned" => "bg-primary",
            "Cancelled" => "bg-danger",
            _ => "bg-warning"
        };
    }
}
