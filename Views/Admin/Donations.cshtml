@model List<Donation>
@{
    ViewData["Title"] = "Manage Donations";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Donation Management</h2>
        <div>
            <span class="badge bg-success">R @Model.Where(d => d.Status == "Completed").Sum(d => d.Amount) Total</span>
            <span class="badge bg-primary ms-2">@Model.Count Donations</span>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Donor</th>
                            <th>Amount</th>
                            <th>Payment Method</th>
                            <th>Status</th>
                            <th>Date</th>
                            <th>Anonymous</th>
                            <th>Transaction ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var donation in Model)
                        {
                            <tr>
                                <td>@donation.DonationID</td>
                                <td>
                                    @if (donation.IsAnonymous)
                                    {
                                        <span class="text-muted">Anonymous</span>
                                    }
                                    else if (donation.User != null)
                                    {
                                        @donation.User.FirstName @donation.User.LastName
                                    }
                                    else
                                    {
                                        <span class="text-muted">User Deleted</span>
                                    }
                                </td>
                                <td class="fw-bold text-success">R @donation.Amount</td>
                                <td>@donation.PaymentMethod</td>
                                <td>
                                    <span class="badge @(donation.Status == "Completed" ? "bg-success" : donation.Status == "Pending" ? "bg-warning" : "bg-danger")">
                                        @donation.Status
                                    </span>
                                </td>
                                <td>@donation.DonationDate.ToString("MMM dd, yyyy HH:mm")</td>
                                <td>
                                    @if (donation.IsAnonymous)
                                    {
                                        <i class="fas fa-check text-success"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-times text-muted"></i>
                                    }
                                </td>
                                <td><small class="text-muted">@donation.PaymentTransactionID</small></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h3>R @Model.Where(d => d.Status == "Completed").Sum(d => d.Amount)</h3>
                    <p>Completed Donations</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-warning text-white">
                <div class="card-body text-center">
                    <h3>R @Model.Where(d => d.Status == "Pending").Sum(d => d.Amount)</h3>
                    <p>Pending Donations</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h3>@Model.Count(d => d.IsAnonymous)</h3>
                    <p>Anonymous Donations</p>
                </div>
            </div>
        </div>
    </div>
</div>
