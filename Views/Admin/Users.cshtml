@model List<User>
@{
    ViewData["Title"] = "Manage Users";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>User Management</h2>
        <span class="badge bg-primary">@Model.Count Users</span>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Type</th>
                            <th>Date Registered</th>
                            <th>Email Verified</th>
                            <th>Donations</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.UserID</td>
                                <td>@user.FirstName @user.LastName</td>
                                <td>@user.Email</td>
                                <td>
                                    <span class="badge @(user.UserType == "Admin" ? "bg-danger" : user.UserType == "Volunteer" ? "bg-warning" : "bg-info")">
                                        @user.UserType
                                    </span>
                                </td>
                                <td>@user.DateRegistered.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @if (user.IsEmailVerified)
                                    {
                                        <i class="fas fa-check-circle text-success"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-times-circle text-danger"></i>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@user.Donations.Count</span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <button class="btn btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h3>@Model.Count(u => u.UserType == "Donor")</h3>
                    <p>Donors</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h3>@Model.Count(u => u.UserType == "Volunteer")</h3>
                    <p>Volunteers</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body text-center">
                    <h3>@Model.Count(u => u.UserType == "Admin")</h3>
                    <p>Admins</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body text-center">
                    <h3>@Model.Count(u => u.IsEmailVerified)</h3>
                    <p>Verified Users</p>
                </div>
            </div>
        </div>
    </div>
</div>
